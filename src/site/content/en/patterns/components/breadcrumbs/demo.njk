    </style>
  </head>
  <body>
     <svg style="display: none;">

      <symbol id="icon-home">
        <title>A home icon</title>
        <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
      </symbol>

      <symbol id="icon-dropdown-arrow">
        <title>A down arrow</title>
        <path d="M19 9l-7 7-7-7"/>
      </symbol>

    </svg>

    <nav class="breadcrumbs" role="navigation">
      <a href="./home/">
        <span class="crumbicon">
          <svg viewBox="0 0 24 24" width="24" height="24" aria-hidden="true">
            <use href="#icon-home" />
          </svg>
        </span>
        <span class="home-label">Home</span>
      </a>

      <span class="crumb-separator" aria-hidden="true">|</span>

      <span class="crumb">
        <a href="./home/collection-b/">Collection B</a>
        <span class="crumbicon">
          <svg viewBox="0 0 24 24" width="24" height="24" aria-hidden="true">
            <use href="#icon-dropdown-arrow" />
          </svg>
          <select class="disguised-select" title="Navigate to another collection">
            <option>Collection A</option>
            <option selected>Collection B</option>
            <option>Other Collections</option>
          </select>
        </span>
      </span>

      <span class="crumb-separator" aria-hidden="true">|</span>

      <span class="crumb">
        <a aria-current="page">Sub Collection C</a>
        <span class="crumbicon">
          <svg viewBox="0 0 24 24" width="24" height="24" aria-hidden="true">
            <use href="#icon-dropdown-arrow" />
          </svg>
          <select class="disguised-select" title="Navigate to another sub collection">
            <option>Sub Collection A</option>
            <option>Sub Collection B</option>
            <option selected>Sub Collection C</option>
          </select>
        </span>
      </span>
    </nav>

    <script>
      const e=document.querySelectorAll(".breadcrumbs select"),t=new Set(["Tab","Enter"," "]),n=new Set(["ArrowUp","ArrowDown"]);e.forEach((e=>{let o=!1;e.addEventListener("change",(e=>{if(o)return;const t=e.target,n=t.value,c=t.closest(".crumb");c.classList.add("tree-changed"),c.querySelector(":scope > a").textContent=n,r(n)})),e.addEventListener("keydown",(({key:e})=>{n.has(e)?o=!0:t.has(e)&&(o=!1)}))}));const r=e=>{console.info("change path to: ",e)};
    </script>
  </body>
</html>
