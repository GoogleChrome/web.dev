---
permalink: /en/feed.xml
metadata:
  title: web.dev
  url: https://web.dev
  author:
    name: Google Developers
  feed:
    subtitle: Let's build the future of the web.
    filename: feed.xml
    path: feed/feed.xml
    url: https://web.dev/feed.xml
    id: https://web.dev/
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ metadata.title }}</title>
  <subtitle>{{ metadata.feed.subtitle }}</subtitle>
  <link href="{{ metadata.feed.url }}" rel="self"/>
  <link href="{{ metadata.url }}"/>
  <updated>{{ collections.post | rssLastUpdatedDate }}</updated>
  <id>{{ metadata.feed.id }}</id>
  <author>
    <name>{{ metadata.author.name }}</name>
  </author>
  {% for post in collections.post -%}
  {% set absolutePostUrl -%}{{ post.url | stripLanguage | url | absoluteUrl(metadata.url) }}{%- endset %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ absolutePostUrl }}"/>
    <updated>{{ post.date | rssDate }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}</content>
    {% set postAuthor =  authors[post.data.author] -%}
    <author>
      <name>{{ postAuthor.name.given }} {{ postAuthor.name.family }}</name>
    </author>
  </entry>
  {%- endfor %}
</feed>