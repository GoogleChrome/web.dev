---
layout: default-next
title: Learn
description: |
  Learn best practices for the modern web and hone your skills with hands-on
  codelabs.
date: 2018-11-05
pageScripts:
  - '/js/learn.js'
---

<div class="learn">
  {# Hero starts #}
  <header class="hero">
    <div class="wrapper">
      <div class="all-center flow">
        <h1 class="text-size-4">{{ title }}</h1>
        <p>{{ 'i18n.learn.header' | i18n(locale) }}</p>
      </div>
    </div>
  </header>
  {# Hero ends #}

  {# Courses start #}
  <div class="wrapper">
    <div class="headline repel">
      <h2 id="{{ 'i18n.learn.courses' | i18n(locale) | slug }}" class="text-size-3">{{ 'i18n.learn.courses' | i18n(locale) }}</h2>
    </div>
  </div>

  <div class="bg-mid-bg">
    <div class="wrapper">
      <div class="cluster pad-size-1">
        {% set coursesArr = helpers.values(courses) %}
        {% for course in coursesArr|sort(true, false, 'meta.date') %}
          {% if not course.meta.draft %}
            <div class="pad-size-1">
              <a href="{{ course.meta.url }}" class="card bg-core-bg" data-style="branded">
                <div class="card__header repel">
                  <p class="color-mid-text">Course</p>
                  <div class="counter t-bg-highlights-purple t-color-shades-light-bright">
                    {% set pages = collections.all | navigation(course.toc) %}
                    <span class="counter__content">{{ pages.list.length }}</span>
                    {% include 'icons/mortarboard.svg' %}
                  </div>
                </div>
                <img src="{{ course.meta.card }}" alt="{{ course.meta.title | i18n(locale) }}" />
                <div class="card__content flow">
                  <h3 class="card__heading text-size-2">{{ course.meta.title | i18n(locale) }}</h2>
                  <p class="text-size-0">{{ course.meta.description | i18n(locale) }}</p>
                </div>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  {# Courses end #}


  {# Collections start #}
  <div class="wrapper">
    <div class="headline repel">
      <h2 id="{{ 'i18n.learn.collections' | i18n(locale) | slug }}" class="text-size-3">{{ 'i18n.learn.collections' | i18n(locale) }}</h2>

    {% set filterItems = [] %}
    {% for category, paths in learn %}
      {% set i18nKey = 'i18n.learn.' + category %}
      {% set filterItems = (filterItems.push({title: i18nKey | i18n(locale), id: i18nKey | i18n(locale) | slug}), filterItems) %}
    {% endfor %}
    <web-learn-filter all="{{'i18n.common.all' | i18n(locale)}}" filters="{{filterItems | dump}}"></web-learn-filter>
  </section>

  <div id="learn__collections">
    {% for category, paths in learn %}
      {% set i18nKey = 'i18n.learn.' + category %}
      <div id="{{ i18nKey | i18n(locale) | slug }}" class="learn__collection">
        <div class="wrapper">
          <div class="repel">
            <h2 id="{{ 'i18n.learn.collections' | i18n(locale) | slug }}" class="text-size-2">{{ i18nKey | i18n(locale) }}</h2>
          </div>

          <div class="cluster pad-size-1">
            {% for path in paths %}
              <div class="pad-size-1">
                <a href="{{ path.url }}" class="card">
                  <div class="card__header repel">
                    <p class="color-mid-text">Collection</p>
                    <div class="counter" data-layout="flush">
                      <span class="counter__content">{{ path.topics.length }}</span>
                      {% include 'icons/mortarboard.svg' %}
                    </div>
                  </div>
                  <img src="{{ path.cover | imgix }}" alt="{{ path.title | i18n(locale) }}" />
                  <div class="card__content flow">
                    <h3 class="card__heading text-size-2">{{ path.title | i18n(locale) }}</h2>
                    <p class="text-size-0">{{ path.description | i18n(locale) }}</p>
                  </div>
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  {# Collections end #}
</div>
