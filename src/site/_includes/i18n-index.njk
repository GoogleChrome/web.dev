---
layout: default-next
---
{% from 'macros/post-card.njk' import postCard with context %}

<div class="landing-page">
 {# @TODO fix subscribe button #}
 {# <div class="w-actions">
    {% include 'partials/subscribe-action.njk' %}
  </div> #}

  {# Hero starts #}
  <header class="region bg-mid-bg">
    <div class="wrapper">
      <div class="headline all-center flow">
        <h2 class="headline__title">{{ title }}</h2>
        <p>{{ description }}</p>
      </div>
    </div>
  </header>
  {# Hero ends #}

  <div class="region">
    {# Elements start #}
    <div class="wrapper auto-grid">
      {% for element in paged.elements %}
        {% set data = element.data %}

        {{ postCard(
          element.overrideTitle or element.title | i18n(locale),
          element.description | i18n(locale),
          element.url,
          data.thumbnail or data.hero or null,
          element.overrideTitle or element.title | i18n(locale),
          null,
          null,
          null,
          null,
          isAuthor,
          false
        ) }}
      {% endfor %}
    </div>
    {# Elements end #}

    <div class="wrapper gap-top-size-3">
      {% include "partials/pagination-next.njk" %}
    </div>
  </div>
</div>
