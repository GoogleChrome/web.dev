{% from 'macros/icon.njk' import icon, svg with context %}
<nav class="course-app-bar app-bar" aria-label="breadcrumbs">
  <ul class="app-bar__list">
    <li class="app-bar__item">
      <a href="/">{{ svg('../../images/lockup.svg', {label: 'web.dev', className: 'course-app-bar__logo'}) }}</a>
    </li>
    <li class="app-bar__item">
      <a href="/learn/">{{ 'i18n.header.learn' | i18n(locale) }}</a>
    </li>
    <li class="app-bar__item">
      <a href="/learn/css/">{{ courseData.meta.title | i18n(locale) }}</a>
    </li>
  </ul>
  <share-action class="gc-analytics-event app-bar__share"
    authors="{{ authors | expandAuthors(collections.authors, lang) }}"
    data-category="web.dev"
    data-label="share"
    data-action="click"
    data-icon="share"
    tabindex="0"
    role="button"
  >
    {{ icon('share') }}
    <span>{{ 'i18n.common.share' | i18n(locale) }}</span>
  </share-action>
</nav>
