{# This is used on the right hand side of the page as the ToC for larger viewports #}
{% if tocContents %}
  <nav class="course__toc toc over-scroll hidden-yes xl:hidden-no" data-type="side" aria-label="{{ 'i18n.toc.on_this_page' | i18n(locale) }}">
    <div class="course-toc__heading font-google-sans weight-medium">{{ 'i18n.toc.on_this_page' | i18n(locale) }}</div>
    <web-scroll-spy>
      <div class="toc__wrapper flow-recursive">
        {{ tocContents | safe }}
      </div>
    </web-scroll-spy>
  </nav>
{% endif %}
