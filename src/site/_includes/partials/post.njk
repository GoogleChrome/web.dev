{# *-landing-page classes are a holdover from devsite. #}
{# It would be great to remove them as part of the v1 migration. #}
<div class="guide-landing-page">
  {% if hero %}
    {% Hero {
      hero: hero,
      alt: alt,
      heroPosition: hero_position,
      heroFit: hero_fit
    } %}
  {% endif %}

  {# Make sure Actions are first in the tab order. #}
  <div class="w-actions">
    <share-action authors="{{ authors | expandContributors | join('|') }}"
      class="gc-analytics-event w-actions__fab w-actions__fab--share"
      data-category="web.dev"
      data-label="share"
      data-action="click"
      data-icon="share"
      tabindex="0"
      role="button"
    >
      <span>Share</span>
    </share-action>
    {% include 'partials/subscribe-action.njk' %}
  </div>

  {% include 'partials/translation-disclaimer.njk' %}

  <div class="w-layout-container--narrow w-post-content">
    <header class="w-article-header">
      {% if path.slug === 'blog' %}
        <div class="w-post-breadcrumbs">
          {% Breadcrumbs path %}
        </div>
      {% endif %}

      <h1 class="w-article-header__headline">{{ title | md | safe }}</h1>
      {% if subhead %}
        <p class="w-article-header__subhead w-mb--non">
          {{ subhead | md | safe }}
        </p>
      {% endif %}

      {% if date %}
        <div class="w-author__published">
          <time>{{date | prettyDate}}</time>
          {% if updated %} <span class="w-author__separator">â€¢</span> Updated <time>{{ updated | prettyDate }}</time> {% endif %}
        </div>
      {% endif %}
      {% if path.slug !== 'blog' %}
        {% SignPosts {
          postToCollections: collections.postToCollections,
          url: page.url
        } %}
      {% endif %}

      {% if authors %}
        <div class="w-authors w-mt--xl w-pt--sm">
          {% for author in authors %}
            {% Author {
              id: author,
              showSocialMedia: true}
            %}
          {% endfor %}
        </div>
      {% endif %}
    </header>

    {% if draft and site.env === 'dev' %}
      <div class="w-banner w-banner--warning w-banner--body">
        ðŸš¨ This post is a draft! ðŸš¨
      </div>
    {% endif %}

    {{ content | safe }}

    <div class="w-chips">
      {% for tag in tags | findTags %}
        <a class="w-chip" href="{{ tag.href }}">{{ tag.title }}</a>
      {% endfor %}
    </div>

    <div class="w-post-github-link w-mt--l w-mb--l">
      <span class="w-mr--sm">
        {% if updated %}
        Last updated: <time>{{ updated | prettyDate }}</time>
        {% else %}
        Last updated: <time>{{ date | prettyDate }}</time>
        {% endif %}
      </span>
      <a
        href="{{ page.inputPath | githubLink }}"
      >
        Improve article
      </a>
      {# Hide suggest translation for now. #} {#
      <a href="#">Suggest translation</a> #}
    </div>

    <web-feedback></web-feedback>

    {% if codelabs %}
      {% CodelabsCallout codelabs, lang %}
    {% endif %}
  </div>

  {% if path.slug === 'blog' %}
    {# Find next blog post #}
    {% ArticleNavigation {
      back: '/blog',
      backLabel: 'Return to all articles'
    } %}
  {% else %}
    {# Find next item in this learning path #}
    {% ArticleNavigation {
      back: '/' + path.slug,
      backLabel: 'Return to all articles'
    } %}
  {% endif %}
</div>
