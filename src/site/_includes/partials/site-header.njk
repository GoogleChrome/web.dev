{% from 'macros/icon.njk' import icon, svg with context %}

<web-header role="banner" class="site-header">
  <div class="cluster gutter-base"> 
    <button class="fab tooltip color-core-text lg:hidden-yes" data-open-drawer-button>
      {% include "icons/menu.svg" %}
      <span class="tooltip__content">Close</span>
    </button>
    <a href="/" class="site-header__brand">
      {{ svg('../../images/lockup.svg', {label: 'web.dev'}) }}
    </a>
  </div>
  <web-navigation-drawer type="standard">
    <nav class="site-header__nav" aria-label="main navigation" data-drawer-container>
      {% for item in navigation.items %}
        <a class="site-header__link" href="{{ item.url }}" {% if item.url === page.url %}aria-current="page"{% endif %}>
          {{ item.label | i18n(locale) }}
        </a>
      {% endfor %}
      <button class="fab tooltip color-core-text lg:hidden-yes" data-drawer-close-button>
        {{ icon('close') }} 
        <span class="tooltip__content">{{ 'i18n.common.close' | i18n(locale) }}</span>
      </button>
    </nav>
  </web-navigation-drawer>
  <div class="site-header__actions cluster">
    <button class="fab tooltip color-core-text">
      {{ icon('search') }}
      <span class="tooltip__content">{{ 'i18n.search.search' | i18n(locale) }}</span>
    </button>
    <a class="site-header__link" href="#">Sign in</a>
  </div>
</web-header>