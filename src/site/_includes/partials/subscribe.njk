<web-subscribe id="subscribe">
  <div class="w-subscribe">
    <div class="w-display--flex w-subscribe--padded w-text--center">
      <h1 class="w-headline--two">Helping you build powerful web experiences</h1>
    </div>
    <div class="w-display--flex w-subscribe--padded w-text--center">
      <p class="w-subscribe__message">Get modern web development guidance and best practices straight to your inbox.</p>
    </div>
    <form class="w-subscribe__form" action="{{ site.subscribeForm }}" method="post">
      <div class="w-subscribe__fields">
        <div class="w-subscribe__field">
          <label class="w-visually-hidden" for="sub-firstname">First name</label>
          <input id="sub-firstname" name="FirstName" placeholder="First Name" required
            type="text" />
        </div>
        <div class="w-subscribe__field">
          <label class="w-visually-hidden" for="sub-lastname">Last name</label>
          <input id="sub-lastname" name="LastName" placeholder="Last Name" required
            type="text" />
        </div>
      </div>
      <div class="w-subscribe__field w-display--flex">
        <label class="w-visually-hidden" for="sub-email">Your Email</label>
        <input id="sub-email" name="EmailAddress" placeholder="Your Email" required
          type="email" />
      </div>
      <div class="w-subscribe__field w-display--flex">
        <div class="w-subscribe__select-border">
          <label class="w-visually-hidden" for="sub-country">Country</label>
          <select class="w-subscribe__select" id="sub-country" name="Country" required>
            {% for country in countries %}
              {% if country[1] === "United States" %}
                <option selected value="{{country[0]}}">{{country[1]}}</option>
              {% else %}
                <option value="{{country[0]}}">{{country[1]}}</option>
              {% endif %}
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="w-subscribe__field w-text--center w-display--flex">
        <span class="w-subscribe__notice">Don't worry, no spam here! Your information will only be used for.... We share updates every 1-2 months and you can unsubscribe anytime.</span>
      </div>
      <div class="w-subscribe__field w-display--flex w-subscribe--padded">
        <div class="w-display--inline-flex">
          <input id="sub-newsletter" name="WebDevNewsletter" required value="Unconfirmed" class="w-checkbox" type="checkbox" />
          <label for="sub-newsletter" class="w-ml--l">Add me to the web.dev mailing list.</label>
        </div>
      </div>
      <div class="w-subscribe__field w-display--flex w-subscribe--padded">
        <div class="w-display--inline-flex">
          <input id="sub-pii-spii" name="collects-pii-spii-checkbox" required value="Unconfirmed" class="w-checkbox" type="checkbox" />
          <label for="sub-pii-spii" class="w-ml--l">
            I accept Google's <a href="https://policies.google.com/terms" target="_blank">Terms and Conditions</a> and acknowledge that my information will be used in accordance with Google's <a href="https://policies.google.com/privacy" target="_blank">Privacy Policy</a>.
          </label>
        </div>
      </div>
      <div class="w-visually-hidden">
        <label for="sub-is-it-just-me-or-was-this-form-filled-out-by-a-robot">Congrats on finding this field, I'd recommend you not filling it out though...</label>
        <input type="text" id="sub-is-it-just-me-or-was-this-form-filled-out-by-a-robot" name="is-it-just-me-or-was-this-form-filled-out-by-a-robot" tabindex="-1" />
        <label for="sub-language">Language</label>
        <select id="sub-language" name="LanguagePreference" required tabindex="-1">
          <option selected value="en-US">en-US</option>
        </select>
      </div>
      <div class="w-subscribe__field w-text--center">
        <button class="w-subscribe__button w-button w-button--primary" type="submit">
          Subscribe
        </button>
      </div>
    </form>
    <div class="w-subscribe__error w-display--flex w-text--center"></div>
  </div>
</web-subscribe>
