{% from 'macros/icon.njk' import icon with context %}

<web-navigation-drawer class="drawer-course" type="standard">
  <nav data-drawer-container>

    <div class="drawer-course__contents flow flow-space-300">
      <div class="drawer-course__header">
        <button data-drawer-close-button class="w-button--svg w-button--round" aria-label="{{ 'i18n.common.close' | i18n(locale) }}">
          {{ icon('close') }}
          <span class="w-tooltip">{{ 'i18n.common.close' | i18n(locale) }}</span>
        </button>

        <div class="drawer-course__title">
          {% include 'partials/course-gradient-title.njk' %}
        </div>
      </div>

      <div class="drawer-course__search">
        <div class="input"></div>
      </div>

      <div class="drawer-course__links scrollbar">
        {% for i in range(0, 40) %}
        <a class="drawer-course__link" {% if i == 2 %} data-active {% endif %} {% if i == 4 %} data-complete {% endif %} href="/learn/">
          <span class="drawer-course__link-counter font-mono">{{ i | padStart(3, '0') }}</span>
          {% if i % 2 == 0 %}
          <span class="drawer-course__link-title gap-left-400">Flexbox</span>
          {% else %}
          <span class="drawer-course__link-title gap-left-400">Learn borders and shadows and this is pretty long</span>
          {% endif %}
          {{ icon('done', 'drawer-course__link-check gap-left-auto') }}
        </a>
        {% endfor %}
      </div>
    </div>

  </nav>
</web-navigation-drawer>
