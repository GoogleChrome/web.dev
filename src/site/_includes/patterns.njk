---
layout: default
---
{% from 'macros/patterns-card.njk' import PatternSuiteCard with context %}

<div>
  {# Make sure Actions are first in the tab order. #}
  <div class="w-actions">
    {% include 'partials/subscribe-action.njk' %}
  </div>

  <div class="w-layout-container w-pb--non">
    <header class="w-page-header">
      <h1 class="w-page-header__headline">{{ title }}</h1>
      <p class="w-page-header__copy">{{ description }}</p>
    </header>
  </div>
  <section class="w-grid">
    <div class="w-grid__columns w-grid__columns--three" role="list">
      {% for setId, set in patterns.sets %}
        {% if (site.env == 'prod' and set.draft) or set.suite %}
          {# Don't display draft suite cards in prod, and don't display
            sets that have a parent suite #}
        {% else %}
          {{ PatternSuiteCard(set) }}
        {% endif %}
      {% endfor %}
    </div>
  </section>
</div>