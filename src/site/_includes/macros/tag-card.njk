{#
  @typedef {TagsItem} tag - The tag to display in card format.
#}
{% macro tagCard(tag) %}

{% set title = tag.overrideTitle or tag.title | i18n(locale) %}
{% set description = tag.description | i18n(locale) %}
{% set url = tag.url %}
{% set data = tag.data %}
{% set image = data.thumbnail or data.hero or null %}

<article class="card">
  {% if image %}
    <a href="{{ url }}" aria-hidden="true">
      {% Img src=image, alt=title, width="570", height="330", class="card__hero", params={fit: 'center', h: '330', w: '570'} %}
    </a>
  {% endif %}
  <div class="card__content flow">
    <h2 class="card__heading text-size-3">
      <a href="{{ url }}">{{ title }}</a>
    </h2>
    <p>{{ description }}</p>
  </div>
</article>
{% endmacro %}
